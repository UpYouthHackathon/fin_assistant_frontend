{
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"parser": "@babel/eslint-parser",
	"extends": "eslint:recommended",
	"rules": {
		"no-bitwise": "off",
		"no-plusplus": "off",
		"func-names": "off",
		"no-underscore-dangle": "off",
		"consistent-return": "off",
		"import/no-unresolved": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-unused-vars": "off"
	}
}
